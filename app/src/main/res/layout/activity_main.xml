<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/main_button_papers_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papers List"
        android:layout_below="@id/main_toolbar"/>
    <Button
        android:id="@+id/main_button_discussion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discussion"
        android:layout_below="@id/main_button_papers_list"/>
    <Button
        android:id="@+id/main_button_notetaking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NoteTaking"
        android:layout_below="@id/main_button_discussion"/>
    <Button
        android:id="@+id/main_button_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NoteTaking"
        android:layout_below="@id/main_button_notetaking"/>
</RelativeLayout>